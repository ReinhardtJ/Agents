{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "bash": "ask",
    "doom_loop": "ask",
    "edit": "ask"
  },
  "provider": {
    "lmstudio": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LM Studio",
      "options": {
        "baseURL": "http://127.0.0.1:1234/v1"
      },
      "models": {
        "mistralai/devstral-small-2-2512": {
          "name": "Devstral 2 Small (Local)",
          "reasoning": true,
          "limit": {
            "context": 128000,
            "output": 64000
          }
        }
      }
    }
  }
}
